<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".FragmentEventDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@drawable/background_up"
            android:padding="8dp">
            <TextView
                android:id="@+id/tvEvent"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:drawableLeft="@drawable/ic_event_color"
                android:drawablePadding="@dimen/drawablePaddingSize"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvClass"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_class_small"
                android:textColor="@color/colorWhite"
                android:drawablePadding="@dimen/drawablePaddingSize"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvDressCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="5dp"
                android:drawableLeft="@drawable/ic_dress_code"
                android:drawablePadding="@dimen/drawablePaddingSize"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCreatorType"
                    android:drawableLeft="@drawable/ic_admin_small"
                    android:drawablePadding="@dimen/drawablePaddingSize"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"

                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvDate"
                    android:drawableLeft="@drawable/ic_calendar_small"
                    android:drawablePadding="@dimen/drawablePaddingSize"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descriptionCap"
            android:padding="8dp"
            />
        <TextView
            android:id="@+id/tvDesc"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>